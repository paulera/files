#!/bin/bash

if [ -z $1 ]; then
    echo "You must specify a file";
    exit 1;
fi

if [ "$1" == "2" ]; then

    BINFOLDER=$FILESROOT"/bin"

    if [ ! -d $BINFOLDER ]; then
        mkdir -p $BINFOLDER
    fi

    if [ ! -d $BINFOLDER ]; then
        echo "Unable to create $BINFOLDER"
        exit 1;
    fi
    
    ARQ=$BINFOLDER"/"$2

else

    BINFOLDER=$HOME"/bin"

    if [ ! -d $BINFOLDER ]; then
        mkdir -p $BINFOLDER
    fi

    if [ ! -d $BINFOLDER ]; then
        echo "Unable to create $BINFOLDER"
        exit 1;
    fi
    
    ARQ=$BINFOLDER"/"$1

fi


if [ ! -f $ARQ ]; then
	vim -c ":read $FILESROOT/script_template.py | set syntax=python" +3 $ARQ
	if [ -f $ARQ ]; then
		echo ""
		cecho green "Script saved as "
		echo $ARQ
		echo ""
		chmod +x $ARQ
	else
		echo ""
		cecho red "Script"
		echo -n " $ARQ "
		cecho red "not saved"
		echo ""
		echo ""
	fi

else
	vim $ARQ;
fi

