#!/bin/bash

# faz:
# ps aux <parametro>
# eliminando o resultado do proprio grep, que sempre vem junto

if [ "$1" == "--help" ]; then
	cecho reset "Uso: "
	cecho yellow "psaux <parte do nome do processo>"
	cecho reset "\n\n     Executa o comando ps aux | grep "
	cecho white "<parte do nome do processo>\n\n"
	exit 1;
fi 

ps aux | grep -v grep | grep -v psaux | grep $*
