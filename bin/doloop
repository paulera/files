#!/bin/bash

INTERVAL="1"
CMD="$*"

show() {
	RESULT="$($1 2>&1 /dev/stdout)"
    clear
    echo ""
    echo ""
    echo ""
    echo ""
    $1
    tput cup 0 0 
    echo "$(date)"
    echo "$1"
    echo "------------------------------"
}

show "${CMD}"

while :; do
	
	show "${CMD}"
	sleep $INTERVAL

done
